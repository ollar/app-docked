.toggle
.pan-tab 
ul.pure-menu-list
  li.pure-menu-item
    a.pure-menu-link(href="/") <%= _.t('home') %>
  li.pure-menu-separator
  <% if (!id) { %>
  li.pure-menu-item
    a.pure-menu-link(href="/login") <%= _.t('login') %>
  li.pure-menu-item
    a.pure-menu-link(href="/register") <%= _.t('register') %>
  li.pure-menu-separator
  <% }; %>
  <% if (id === 1) { %>
  li.pure-menu-item
    span.pure-menu-heading  <%= _.t('admin menu') %>
  li.pure-menu-item
    a.pure-menu-link(href="/users") <%= _.t('users') %>
  li.pure-menu-item
    a.pure-menu-link(href="/meals") <%= _.t('meals') %>
  li.pure-menu-item
    a.pure-menu-link(href="/stats/week/all") <%= _.t('common week stats') %>
  li.pure-menu-item
    a.pure-menu-link(href="/stats/month/all") <%= _.t('common month stats') %>
  li.pure-menu-item
    a.pure-menu-link(href="/comments") <%= _.t('comments') %>
  li.pure-menu-item
    a.pure-menu-link(href="/orders") <%= _.t('orders') %>
  li.pure-menu-separator
  <% }; %>
  <% if (id) { %>
  li.pure-menu-item
    span.pure-menu-heading  <%= _.t('my stats') %>
  li.pure-menu-item
    a.pure-menu-link(href="/stats/week") <%= _.t('my week') %>
  li.pure-menu-item
    a.pure-menu-link(href="/stats/month") <%= _.t('my month') %>
  li.pure-menu-separator
  li.pure-menu-item
    a.pure-menu-link(href!="/user/<%= id %>") <%= username %>
  li.pure-menu-item
    a.pure-menu-link(href="/logout") <%= _.t('logout') %>
  li.pure-menu-separator
  <% }; %>
